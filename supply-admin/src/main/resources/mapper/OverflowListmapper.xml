<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yearbooks.supply.mapper.OverflowListMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yearbooks.supply.pojo.OverflowList">
        <id column="id" property="id" />
        <result column="overflow_date" property="overflowDate" />
        <result column="overflow_number" property="overflowNumber" />
        <result column="remarks" property="remarks" />
        <result column="user_id" property="userId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, overflow_date, overflow_number, remarks, user_id
    </sql>
    <select id="getNextOverFlowNumber" resultType="java.lang.String">
        select max(overflow_number) as overflowNumber
        from t_overflow_list tol
        where to_days(overflow_date) = to_days(now())
    </select>
    <select id="overFlowList" resultType="com.yearbooks.supply.pojo.OverflowList">
        select
            tol.*,
            tu.user_name as userName
        from
            t_overflow_list tol
            left join t_user tu on tol.user_id = tu.id
        <where>
            <if test="null != overFlowListQuery.startDate and overFlowListQuery.startDate !='' ">
                and tol.overflow_date &gt;= #{overFlowListQuery.startDate}
            </if>
            <if test="null != overFlowListQuery.endDate and overFlowListQuery.endDate !='' ">
                and tol.overflow_date &lt;= #{overFlowListQuery.endDate}
            </if>
        </where>

    </select>

</mapper>
