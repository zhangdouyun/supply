<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yearbooks.supply.mapper.UserRoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yearbooks.supply.pojo.UserRole">
        <id column="id" property="id" />
        <result column="role_id" property="roleId" />
        <result column="user_id" property="userId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, role_id, user_id
    </sql>
    <select id="findRolesByUserName" parameterType="string" resultType="java.lang.String">
        select
               r.NAME
        FROM
                supply.t_user_role ur
                left join supply.t_user u on ur.user_id=u.id
                left join supply.t_role r on ur.role_id=r.id
        where
                r.is_del=0
                and u.user_name=#{userName}
    </select>

</mapper>
